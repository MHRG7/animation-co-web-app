# Environment Configuration Template
# Copy this file to .env and fill in actual values
# NEVER commit .env to git (it contains secrets)

NODE_ENV=development

# Development database
DATABASE_URL="postgresql://user:password@localhost:5432/database_name"

# Test database (created automatically by Docker)
DATABASE_URL_TEST="postgresql://user:password@localhost:5432/database_name_test"

PORT=3001

# JWT Configuration
# Generate a secure with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET="your-secret-here-replace-with-generated-value"
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing
# 10 for development (fast), 12+ for production (more secure)
BCRYPT_ROUNDS=10

# CORS Configuration
# Development: http://localhost:5137
# Production: https://yourdomain.com
FRONTEND_URL=http://localhost:5137

# Rate Limiting
# Development: 100 requests/minute (relaxed for testing)
# Production: 10-50 requests/minute (prevent abuse)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100